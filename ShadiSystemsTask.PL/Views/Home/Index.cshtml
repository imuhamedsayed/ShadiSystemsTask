@model IEnumerable<ShadiSystemsTask.BL.Models.ItemVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<a asp-action="Create" asp-controller="Home" class="btn btn-primary" style="margin-left:15px;">+ Add New Item</a>

<br />
<br />

<form asp-action="Index" asp-controller="Home" method="get" class="form-group">
    <div class="row">
        <div class="col-lg-10">
            <input class="form-control" name="Ename" placeholder="Search By Item Name" />
        </div>
        <div class="col-lg-2">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>

</form>

@if (Model == null || !Model.Any())
{
    <h3 class="text-danger">@ViewBag.found</h3>
}

else
{
<table class="table table-striped table-hover text-center">

    <thead class="thead-dark">
        <tr>
            <th class="text-center">Item Name</th>
            <th class="text-center">Category Name</th>
            <th class="text-center">Qty</th>
            <th class="text-center">Price</th>
            <th class="text-center">Total</th>

        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Name</td>
                <td>@item.Category.Name</td>
                <td>@item.Qty</td>
                <td>@item.Price</td>
                <td>@item.Total</td>

            </tr>
        }

    </tbody>
</table>
}